# Environment Configuration Example
# Copy this file to .env.local and update with your values

# General
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3000
REQUEST_TIMEOUT=30000
WEBSOCKET_TIMEOUT=10000
MAX_RETRIES=3
RETRY_DELAY=1000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/nexustrade"
MIN_POOL_SIZE=2
MAX_POOL_SIZE=10
QUERY_TIMEOUT=30000
CONNECTION_TIMEOUT=10000

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
SESSION_MAX_AGE=604800000
SESSION_UPDATE_AGE=86400000
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER=NexusTrade

# Trading
DEFAULT_LOT_SIZE=0.01
DEFAULT_LEVERAGE=100
DEFAULT_SPREAD=2
MAX_DAILY_LOSS_PERCENT=5
MAX_POSITION_SIZE_PERCENT=2
MAX_OPEN_POSITIONS=5
DEFAULT_BACKTEST_BALANCE=10000
MAX_BACKTEST_DAYS=3650
SUPPORTED_SYMBOLS=EURUSD,GBPUSD,USDJPY,USDCHF,AUDUSD,USDCAD,NZDUSD
SUPPORTED_TIMEFRAMES=M1,M5,M15,M30,H1,H4,D1,W1,MN1

# UI
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
CHART_REFRESH_INTERVAL=5000
DEFAULT_CHART_PERIOD=D1
DEFAULT_THEME=light
NOTIFICATION_DURATION=5000
TOAST_POSITION=top-right

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
LOG_LEVEL=debug
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m
PERFORMANCE_MONITORING_ENABLED=true
SLOW_QUERY_THRESHOLD=1000

# Feature Flags
FEATURE_AI_STRATEGY_GENERATION=true
FEATURE_SOCIAL_TRADING=false
FEATURE_ADVANCED_CHARTING=true
FEATURE_PAPER_TRADING=true
FEATURE_MOBILE_APP=false
BETA_FEATURES_ENABLED=false
FEATURE_NEW_DASHBOARD=false

# External Services
TWELVE_DATA_API_KEY=your-twelve-data-api-key
TWELVE_DATA_BASE_URL=https://api.twelvedata.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
EMAIL_SERVICE=resend
RESEND_API_KEY=re_your-resend-api-key
FROM_EMAIL=noreply@nexustrade.com
BLOB_STORAGE_URL=https://blob.vercel-storage.com
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token

# Cache
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=nexustrade:
REDIS_TTL=3600
HTTP_CACHE_MAX_AGE=300
HTTP_CACHE_STALE_WHILE_REVALIDATE=60

# Security
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_STRICT=false
RATE_LIMIT_GLOBAL_MAX=1000
RATE_LIMIT_GLOBAL_WINDOW=60000
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
