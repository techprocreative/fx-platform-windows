{
  "name": "fx-platform-executor",
  "version": "1.0.0",
  "description": "FX Trading Platform Windows Executor - Automated MT5 Bridge",
  "main": "app/electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently -k -n \"VITE,ELECTRON\" -c \"cyan,magenta\" \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on -l http://localhost:5173 && electron .",
    "start": "electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "type-check": "tsc --noEmit",
    "clean": "node scripts/clean-directories.js",
    "clear:config": "node scripts/clear-config.js",
    "postinstall": "node scripts/post-install-comprehensive.js",
    "rebuild": "npm run rebuild:native",
    "rebuild:native": "electron-rebuild -f -w zeromq better-sqlite3",
    "fix:paths": "node scripts/fix-zeromq-path.js",
    "fix:libzmq": "node scripts/download-libzmq-auto.js",
    "verify:dll": "node scripts/verify-libzmq-enhanced.js",
    "verify:build": "node scripts/verify-build.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage",
    "test:full": "npm run test:unit && npm run test:integration",
    "check:predeploy": "node tests/pre-deployment-checklist.js",
    "package:win": "npm run clean && npm run build && electron-builder --win --dir && node scripts/post-build-copy-dlls.js && electron-builder --win --prepackaged dist/win-unpacked",
    "package:win:quick": "npm run build && electron-builder --win --dir && node scripts/post-build-copy-dlls.js",
    "package:all": "electron-builder -mwl",
    "build:production": "node scripts/build-production.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "trading",
    "metatrader",
    "mt5",
    "forex",
    "automated-trading"
  ],
  "author": "FX Platform Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "better-sqlite3": "^11.0.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.294.0",
    "pusher-js": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.18.0",
    "winston": "^3.11.0",
    "zeromq": "^6.0.0-beta.20",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-electron": "^0.15.5",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fx-platform/windows-executor.git"
  },
  "bugs": {
    "url": "https://github.com/fx-platform/windows-executor/issues"
  }
}
